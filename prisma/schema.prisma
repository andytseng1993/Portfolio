// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model Project {
  id         String   @id @default(auto()) @map("_id") @db.ObjectId
  title      String
  content    String
  createdAt  DateTime
  tech       String?
  githubSrc  String?
  websiteSrc String?
  image      Bytes?
  order      Int
  pinned     Boolean
}

model User {
  id       String @id @default(auto()) @map("_id") @db.ObjectId
  email    String @unique
  password String
}
